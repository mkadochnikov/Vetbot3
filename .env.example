# Конфигурация ветеринарного бота

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# URL веб-приложения (после развертывания)
WEBAPP_URL=https://your-webapp-url.com

# Порт для веб-сервера
PORT=5000

# Настройки базы данных (опционально)
DATABASE_URL=sqlite:///vetbot.db

# Настройки уведомлений
ADMIN_CHAT_ID=your_admin_chat_id

# Настройки ветеринарной службы
VET_SERVICE_PHONE=+7-999-123-45-67
VET_SERVICE_EMAIL=info@vetservice.com

